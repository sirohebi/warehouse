/* miniprogram/pages/index/index.wxss */
.container{
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
}

.card{
    margin: 20rpx 0;
}

.ccc{
    width: 200rpx;
    height: 200rpx;
}

.add{
    width: 80rpx;
    height: 80rpx;
    position: fixed;
    right: 14rpx;
    bottom: 20rpx;
    z-index: 99;
}

.searchContainer{
	z-index: 99;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	vertical-align: middle;
	background-color: #f5f5f5;
	height: 60rpx;
}

.searchImg{
	width: 40rpx;
	height: 40rpx;
}

.search{
	background-color: #FFFFFF;
	width: 500rpx;
	border-radius: 20rpx;
}

.exit{
	margin-left: 10rpx;
	width: 40rpx;
	height: 40rpx;
}

.searchContent{
	position: fixed;
	z-index: 99;
	width: 100%;
	height: 95%;
	bottom: 0rpx;
	background-color: #f5f5f5;
}